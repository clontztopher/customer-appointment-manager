    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Pane prefHeight="301.0" prefWidth="240.0">
        <children>
            <VBox fillWidth="false" prefHeight="250.0" prefWidth="240.0" spacing="10.0">
                <Label fx:id="usernameLabel" text="Username" />
                <TextField fx:id="usernameField" />
                <Label fx:id="passwordLabel" text="Password" />
                <TextField fx:id="passwordField" />
            <Button fx:id="signinBtn" mnemonicParsing="false" onAction="#attemptLogin" text="Sign In" />

                      <Label fx:id="languageText" prefHeight="17.0" prefWidth="234.0" text="Language">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="languageLabel" prefHeight="17.0" prefWidth="238.0" text="Label" />
            <Label fx:id="timeZoneText" prefHeight="17.0" prefWidth="237.0" text="Local Time Zone">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="timeZoneLabel" prefHeight="17.0" prefWidth="240.0" text="Label" />
            </VBox>
        </children>
      <opaqueInsets>
         <Insets />
